{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "paths": {
            "@/controllers/*": ["./src/api/v1/controllers/*"],
            "@/helpers/*": ["./src/api/v1/helpers/*"],
            "@/interfaces/*": ["./src/api/v1/interfaces/*"],
            "@/middlewares/*": ["./src/api/v1/middlewares/*"],
            "@/models/*": ["./src/api/v1/models/*"],
            "@/services/*": ["./src/api/v1/services/*"],
            "@/validations/*": ["./src/api/v1/validations/*"]
        },
        "typeRoots": ["./node_modules/@types"],
        "types": ["./src/api/v1/types/express.user.d.ts"]
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*"]
}
